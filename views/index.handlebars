<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="/assets/images/margarita.jpg" class="img" id="margarita" alt="margarita">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-6">
      <h2>Ingredients Not Yet Used:</h2>

      <ul>
        {{#each ingredients}}
          {{#unless used}}
          {{> ingredients/ingredient-block used=true}}
          <br>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
		<div class="col-md-6">
      <h2>Ingredients Used:</h2>

      <ul>
        {{#each ingredients}}
          {{#if used}}
            {{> ingredients/ingredient-block used=false}}
            <br>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">

      <h2>Add an Ingredient</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ingredient-form"> Ingredient Name: </label>
          <input type="text" id="ingredient-form" name="name">
        </div>
      </div>
    </div>

