<h2>Ingredients Not Yet Used</h2>

<ul>
  {{#each ingredients}}
    {{#unless used}}
    {{> ingredients/ingredient-block used=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Ingredients Used</h2>

<ul>
  {{#each ingredients}}
    {{#if used}}
      {{> ingredients/ingredient-block used=false}}
    {{/if}}
  {{/each}}
</ul>


<h2>Add an Ingredient</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ingredient-form"> Ingredient Name: </label>
    <input type="text" id="ingredient-form" name="name">
